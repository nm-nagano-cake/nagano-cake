<div>
      <h2>注文履歴詳細</h2>
      <div class="col-xs-8"  style="margin-top: 50px;">
        <h4>注文情報</h4>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td class="active">注文日</td>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <td class="active">配送先</td>
              <td>
                 <p><%= @order.postal_code %>&emsp;<%= @order.address %></p>
                    <p><%= @order.name %></p>
              </td>
            </tr>
            <tr>
              <td class="active">支払い方法</td>
              <td><%= @order.payment_method %></td>
            </tr>
            <tr>
              <td class="active">ステータス</td>
              <td><%= @order.order_status %></td>
            </tr>
          </tbody>
        </table>

        <h4 style="margin-top: 50px;">注文内容</h4>
        <table class="table table-bordered">
          <thead>
            <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">商品</th>
              <th scope="col">単価（税込）</th>
              <th scope="col">個数</th>
              <th scope="col">小計</th>
            </tr>
          </thead>
          <tbody>
            
                <tr>
                  <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
                  <td>
                    <p><%= @order.postal_code %>&emsp;<%= @order.address %></p>
                    <p><%= @order.name %></p>
                  </td>
                  <td>
                  <% @order_details.each do |order_details| %>
                  
                  <td><%= order_details.item.name %></td>
                  <td><%= order_details.price %></td>
                  <td><%= order_details.amount %></td>
                  <td><%= order_details.price * order_details.amount %>
                  </td>
                  <% end %>
                </tr>

                  
            
          </tbody>
        </table>
      </div>

      <div class="col-xs-4" style="margin-top: 50px;">
        <h4>請求情報</h4>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td class="active">商品合計</td>
              <td><%= @sum %></td>
            </tr>
            <tr>
              <td class="active">配送料</td>
              <td><%= @order.postage %></td>
            </tr>
            <tr>
              <td class="active">ご請求額</td>
              <td><%= @order.billing_amount %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>